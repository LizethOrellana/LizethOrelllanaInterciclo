<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="usuario2"
            type="com.example.orellanalizeth_interciclo.Usuario" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo5">

        <TextView
            android:id="@+id/txtNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="d"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_below="@id/txtNom"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="30sp"
            app:srcCompat="@drawable/usuario" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUsuario"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Acceso Satisfactorio"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <RatingBar
            android:id="@+id/valcontra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="40dp"
            android:isIndicator="true" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="La clave de seguridad se considera: "
            android:layout_below="@id/valcontra"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtvalcontra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="j"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>

</layout>